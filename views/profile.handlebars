<h2>Profile</h2>
<div class="profile-budget">
    <p>This Month's Budget: ${{budget.budget_limit}}</p>
</div>
<div class="profile-cost">
    <p>This Month's Current Spent: ${{total}}</p>
</div>

<div class="profile-budget-option-card">
    <form class="profile-budget-option">
        <label>Select the month to view budget by month:</label>
        <select name="months">
            <option value="01">January</option>
            <option value="02">February</option>
            <option value="03">March</option>
            <option value="04">April</option>
            <option value="05">May</option>
            <option value="06">June</option>
            <option value="07">July</option>
            <option value="08">August</option>
            <option value="09">September</option>
            <option value="10">October</option>
            <option value="11">November</option>
            <option value="12">December</option>
        </select>
        <input type="submit">
    </form>
</div>

<div class="profile-budget-option-card">
    <form class="profile-budget-option">
        <label>Select the year to view budget by year:</label>
        <select name="months">
            <option value="_____">This Year</option>
            <option value="_____-1">Previous Year</option>
        </select>
        <input type="submit">
    </form>
</div>

<div class="profile-cost-option-card">
    <form class="profile-cost-option">
        <label>Select the month to view spendings by month:</label>
        <select name="months">
            <option value="01">January</option>
            <option value="02">February</option>
            <option value="03">March</option>
            <option value="04">April</option>
            <option value="05">May</option>
            <option value="06">June</option>
            <option value="07">July</option>
            <option value="08">August</option>
            <option value="09">September</option>
            <option value="10">October</option>
            <option value="11">November</option>
            <option value="12">December</option>
        </select>
        <input type="submit">
    </form>
</div>

<div class="profile-cost-option-card">
    <form class="profile-cost-option">
        <label>Select the year to view spendings by year:</label>
        <select name="year">
            <option value="_____">This Year</option>
            <option value="_____-1">Previous Year</option>
        </select>
        <input type="submit">
    </form>
</div>

