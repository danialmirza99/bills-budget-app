<div class="cost col-12 pt-3">
  <h2>This Month's Current Spent: <b>{{total}} $</b></h2>
</div>


<form class="add-cost">
  <div class="form-group">
    <label for="bill-name">Bill Name:</label>
    <input class="form-input col-3" type="text" id="bill-name" />
  </div>
  <div class="form-group">
    <label for="bill-amount">Amount:</label>
    <input class="form-input col-3" type="text" id="bill-amount" />
  </div>
  <div class="form-group">
    <label for="bill-due-date">Due Date:</label>
    <input class="form-input col-3" type="text" id="bill-due-date" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Add Cost</button>
  </div>
</form>


<script src="/js/add-cost.js"></script>